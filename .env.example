# =====================================================================
#  MNPIEPL Backend — Environment Variables
#  Copy this file to .env and fill in your real values.
#  NEVER commit the real .env file to version control.
# =====================================================================

# ── Firebase (Admin SDK — server-side, KEEP SECRET) ──────────────────
# Path to the service account JSON downloaded from Firebase Console
# Firebase Console → Project Settings → Service Accounts → Generate new private key
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# ── Firebase (Client-side PUBLIC keys) ───────────────────────────────
# These are safe to expose to browsers via GET /api/firebase-config
/

# ── SMTP Email (server-side, KEEP SECRET) ────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SMTP_USE_TLS=True

# ── Client / Business Email ───────────────────────────────────────────
CLIENT_EMAIL=info@mnpiepl.com
CLIENT_NAME=MNPIEPL

# ── Flask Settings ────────────────────────────────────────────────────
FLASK_DEBUG=False
# Comma-separated list of allowed frontend origins (use * for development)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
